<Project Sdk="DarkPatterns.Build.Pnpm/0.1.4">
    <PropertyGroup>
        <VersionPrefix>$(OpenApiTypeScriptMswVersion)</VersionPrefix>
        <PackPnpmOnBuild Condition=" $(Configuration) == 'Release' ">true</PackPnpmOnBuild>
    </PropertyGroup>

    <ItemGroup>
        <CompileOutputs Include="@(Compile->'$(ProjectDir)/lib/%(filename).js');@(Compile->'$(ProjectDir)/lib/%(filename).d.ts')" />
        <CompileOutputs Include="tsconfig.tsbuildinfo" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="$(SolutionRoot)generators\typescript\npm\npm-typescript.esproj" SpecificVersion="true" />
    </ItemGroup>

    <Target Name="Generation" BeforeTargets="NodeBuild" />

    <ItemGroup>
        <TestedSchema Include="no-refs" />
        <TestedSchema Include="petstore" />
        <TestedSchema Include="headers" />
    </ItemGroup>

    <Target Name="GenerateFromSchema" BeforeTargets="Generation">
        <Exec Command="pnpm openapi-codegen-typescript -o ./openapi-codegen-options.yaml ../../../schemas/%(TestedSchema.Identity).yaml tests/%(TestedSchema.Identity)/" />
    </Target>

</Project>
